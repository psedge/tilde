" line numbers
set number

" reload file on change
set autoread

" ignore cases in search
set ignorecase

" search as typed
set incsearch

" highlight on search result
set hlsearch

" enable syntax highlighting
syntax on

" uft-8
set encoding=utf8

" handle tabs
set smarttab
set expandtab
set shiftwidth=4
set tabstop=4

" set that sexy colourscheme
colorscheme badwolf

" highlight current line
set cursorline
set cmdheight=1


